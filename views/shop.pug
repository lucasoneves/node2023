extends layouts/main-layout.pug
block styles 
  link(rel="stylesheet" href="/css/product.css")
block content
    main
      if prods.length > 0
        .grid 
          each product in prods 
            article.card.product-item 
              header.card-header
                h1.product__title #{product.title}
              div.card-image 
                img(src="https://img.elo7.com.br/product/original/162DE0F/old-book-marrom-caderno-artesanal-secreto.jpg", alt="A Book", width="100%")
              div.card__content 
                h2.product__price $19.99
                p.product__description A very interesting product 
              .card__actions 
                button.btn Add to Cart
      else 
        h1 No products